<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fugliara.ccs002">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".views.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.login.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.home.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.itinerary.ItineraryActivity"
            android:label="@string/title_activity_itinerary"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.order.OrderActivity"
            android:label="@string/title_activity_order"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.tracking.TrackingActivity"
            android:label="@string/title_activity_tracking" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.itinerary.RouteActivity"
            android:label="@string/title_activity_route" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.itinerary.CreateRouteActivity"
            android:label="@string/title_activity_create_route" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.profile.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.profile.ProfileInviteActivity"
            android:label="@string/title_activity_profile_invite" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.profile.ProfileInviteCreateActivity"
            android:label="@string/title_activity_profile_invite_create" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.login.CheckInviteActivity"
            android:label="@string/title_activity_check_invite" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.tracking.StatusActivity"
            android:label="@string/title_activity_status" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.profile.PointsActivity"
            android:label="@string/title_activity_points" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".views.order.ProductActivity"
            android:label="@string/title_activity_product"></activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>
